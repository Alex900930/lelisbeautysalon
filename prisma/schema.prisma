generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Horario {
  id        Int      @id @default(autoincrement())
  hora      String   @unique
  disponible Boolean  @default(true)
  citas     Cita[]   // Relación con el modelo Cita
}

model Cita {
  id        Int      @id @default(autoincrement())
  fecha     DateTime // Fecha de la cita
  horarioId Int      // Relación con el horario
  horario   Horario  @relation(fields: [horarioId], references: [id])
}