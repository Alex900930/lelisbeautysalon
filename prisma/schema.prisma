generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BASE_PRODUCTION_DATABASE_URL")
}

model Horario {
  id      Int      @id @default(autoincrement())
  hora    String
  fecha   DateTime?
  citas   Cita[]   // Relaci√≥n inversa
}

model Cita {
  id         Int      @id @default(autoincrement())
  fecha      DateTime
  horarioId  Int
  horario    Horario  @relation(fields: [horarioId], references: [id])
}
